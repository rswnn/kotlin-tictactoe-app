<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableRow
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Reset"
                android:background="@color/colorLeson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buReset" android:onClick="buReset"/>
        <Button
                android:background="@color/colorDumbways"
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buExit" android:onClick="buExit"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:textAlignment="center"
                android:text="Your Score :"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/textView4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/score" android:text="0"/>
    </TableRow>
    <TableRow
            android:gravity="center"
            android:layout_marginBottom="3pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:background="@color/colorWhite"
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu1" android:onClick="buClick"/>
        <Button
                android:background="@color/colorWhite"
                android:layout_width="40pt"
                android:layout_marginRight="3pt"
                android:layout_height="40pt" android:id="@+id/bu2" android:onClick="buClick"/>
        <Button
                android:background="@color/colorWhite"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu3" android:onClick="buClick"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="3pt"
            android:layout_height="match_parent">
        <Button
                android:background="@color/colorWhite"
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu4" android:onClick="buClick"/>
        <Button
                android:background="@color/colorWhite"
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu5" android:onClick="buClick"/>
        <Button
                android:background="@color/colorWhite"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu6" android:onClick="buClick"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="3pt"
            android:layout_height="match_parent">
        <Button
                android:background="@color/colorWhite"
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu7" android:onClick="buClick"/>
        <Button
                android:background="@color/colorWhite"
                android:layout_marginRight="3pt"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu8" android:onClick="buClick"/>
        <Button
                android:background="@color/colorWhite"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/bu9" android:onClick="buClick"/>
    </TableRow>
</TableLayout>